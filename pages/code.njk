    <style>
        /* LIGHT MODE CALENDAR COLORS (Default) */
        .calendar .width-full {
            fill: #059669;
        }

        /* Accent */
        .calendar .ContributionCalendar-day[data-level="0"] {
            fill: #e2e8f0;
        }

        /* Surface */
        .calendar .ContributionCalendar-day[data-level="1"] {
            fill: #a7f3d0;
        }

        .calendar .ContributionCalendar-day[data-level="2"] {
            fill: #34d399;
        }

        .calendar .ContributionCalendar-day[data-level="3"] {
            fill: #10b981;
        }

        .calendar .ContributionCalendar-day[data-level="4"] {
            fill: #059669;
        }

        .calendar {
            border: none;
            color: #334155;
            font-family: 'Poppins', sans-serif;
        }

        /* Text Muted */

        /* DARK MODE CALENDAR COLORS (.dark class applied to HTML) */
        .dark .calendar .width-full {
            fill: #10b981;
        }

        .dark .calendar .ContributionCalendar-day[data-level="0"] {
            fill: #1e293b;
        }

        .dark .calendar .ContributionCalendar-day[data-level="1"] {
            fill: #064e3b;
        }

        .dark .calendar .ContributionCalendar-day[data-level="2"] {
            fill: #065f46;
        }

        .dark .calendar .ContributionCalendar-day[data-level="3"] {
            fill: #10b981;
        }

        .dark .calendar .ContributionCalendar-day[data-level="4"] {
            fill: #34d399;
        }

        .dark .calendar {
            color: #94a3b8;
        }
    </style>
</head>

