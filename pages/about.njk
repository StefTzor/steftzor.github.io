    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const calculateDuration = (startStr, endStr) => {
                const start = new Date(startStr);
                const end = endStr ? new Date(endStr) : new Date();

                let years = end.getFullYear() - start.getFullYear();
                let months = end.getMonth() - start.getMonth();

                if (months < 0) {
                    years--;
                    months += 12;
                }

                months++;
                if (months >= 12) {
                    years++;
                    months -= 12;
                }

                let result = [];
                if (years > 0) result.push(`${years} yr${years > 1 ? 's' : ''}`);
                if (months > 0) result.push(`${months} mo${months > 1 ? 's' : ''}`);

                return result.join(' ') || '1 mo';
            };

            // 1. Calculate Individual Role Durations
            document.querySelectorAll('.role-duration').forEach(el => {
                const start = el.dataset.start;
                const end = el.dataset.end || null;
                el.textContent = calculateDuration(start, end);
            });

            // 2. Calculate Total Company Duration
            document.querySelectorAll('.company-total-duration').forEach(el => {
                const start = el.dataset.start;
                el.textContent = calculateDuration(start, null);
            });

        });
    </script>
