  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const leftEye = document.getElementById('human-eye-left');
      const rightEye = document.getElementById('human-eye-right');
      const head = document.getElementById('human-head');

      // Configuration
      const maxMove = 2; // Reduced pixel movement for cleaner look
      const headRotateMax = 6; // Reduced tilt for stability

      window.addEventListener('mousemove', (e) => {
        if (!leftEye || !rightEye) return;

        const centerX = window.innerWidth / 2;
        const centerY = window.innerHeight / 2;

        // Eye Tracking
        const moveEye = (eye, mouseX, mouseY) => {
          const eyeRect = eye.getBoundingClientRect();
          const eyeCenterX = eyeRect.left + eyeRect.width / 2;
          const eyeCenterY = eyeRect.top + eyeRect.height / 2;

          const angle = Math.atan2(mouseY - eyeCenterY, mouseX - eyeCenterX);
          const dist = Math.min(maxMove, Math.hypot(mouseX - eyeCenterX, mouseY - eyeCenterY) / 50);

          const x = Math.cos(angle) * dist;
          const y = Math.sin(angle) * dist;

          eye.style.transform = `translate(${x}px, ${y}px)`;
        };

        moveEye(leftEye, e.clientX, e.clientY);
        moveEye(rightEye, e.clientX, e.clientY);

        // Head Tilt
        const xPercent = (e.clientX - centerX) / centerX;
        const rotateDeg = xPercent * headRotateMax;

        if (head) {
          head.style.transform = `rotate(${rotateDeg}deg)`;
        }
      });
    });
  </script>
